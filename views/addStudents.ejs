    <title>增加学生</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <!-- FONT AWESOME ICONS  -->
    <link href="/css/font-awesome.css" rel="stylesheet">
    <!-- CUSTOM STYLE  -->
    <link href="/css/style.css" rel="stylesheet">
    <!-- HTML5 Shiv and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .content-wrapper {
            margin-top: 0px;
            max-height: 400px;
            padding-bottom: 60px;
        }
    </style>
</head>

<body>
    <%- include("./header.ejs",{idx:"addStatus"}) %>

    <!-- MENU SECTION END-->
    <div class="content-wrapper">
        <div class="container">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="lastname" class="col-sm-2 control-label">姓</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" maxlength="10" id="lastname" placeholder="请输入姓">
                    </div>
                </div>
                <!-- username -->
                <div class="form-group">
                    <label class="col-sm-2 control-label">性别</label>
                    <div class="col-sm-10">
                        <input type="radio" value="男" name="nan" class="form-control" id="nan">
                        <label for="#nan">男</label>
                        <input type="radio" value="女" name="sex" class="form-control" id="女">
                        <label for="#nv">女</label>
                    </div>
                </div>
                <!-- sex -->
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="number" min="3" max="40" class="form-control" id="number" placeholder="请输入年龄">
                    </div>
                </div>
                <!-- age -->
                <div class="form-group">
                    <div class="col-sm-10">
                        <button class="btn btn-default">保存</button>
                        <button>取消</button>
                    </div>
                </div>
                <!-- age -->
            </form>
        </div>
    </div>

    <!-- CONTENT-WRAPPER SECTION END-->
    <%- include('./foot.ejs') %>
    <!-- FOOTER SECTION END-->
    <!-- JAVASCRIPT AT THE BOTTOM TO REDUCE THE LOADING TIME  -->
    <!-- CORE JQUERY SCRIPTS -->
    <script src="/js/jquery-1.11.1.js"></script>
    <!-- BOOTSTRAP SCRIPTS  -->
    <script src="/js/bootstrap.js"></script>
    <script src="/js/pagination.js"></script>
    <script>
        $(".save").on("click", function () {
            var name = $("#lastname").val(),
                age = $("#number").val(),
                sex = $("#input[type=radio]:checked").val();
            $.ajax({
                type: "put",
                url: "/student/addStatus",
                data: {
                    name,
                    age,
                    sex
                },
                success(res) {
                    if (res) {
                    }
                }
            })
        })
    </script>
</body>

</html>